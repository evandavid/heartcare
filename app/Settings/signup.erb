<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-theme='e' data-position="fixed">
    <div class="ui-btn-left back-divider">
      <a href="<%= url_for :action => :login %>" data-direction="reverse">
        <img src="/public/images/back.png"/>
      </a>
    </div>
    <div class="ui-btn-right have-divider">
        <a href="<%=url_for :controller => :Settings, :action => :do_refresh %>">
            <img src="/public/images/reload.png"/>
        </a>
    </div> 
    <h1>Sign up</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :do_signup %>">
      <% if @msg %>
          <div class="error-message"><%= @msg %></div>
      <% end %>

      <div data-role="fieldcontain">
        <input type="text" id="login" name="login" class="itemValue" placeholder="username" />
          <br />
        <input type="password" id="password" name="password" class="itemValue" placeholder="password" />
          <br />
        <input type="text" id="email" name="email" class="itemValue" placeholder="email" />
      </div>
      <fieldset class="ui-grid-a">
        <div class="ui-block-a"><button type="reset" data-theme='e'>Reset</button></div>
        <div class="ui-block-b"><button type="submit" data-theme='e'>Submit</a></div>
      </fieldset>
    </form>
  </div>
</div>
