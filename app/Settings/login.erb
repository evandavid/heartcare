<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-theme='e' >
    <h1>Login</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :do_login %>">
      <% if @msg %>
          <div class="error-message"><%= @msg %></div>
      <% end %>

      <div data-role="fieldcontain">
        <input type="text" id="login" name="login" class="itemValue" placeholder="username" />
          <br />
        <input type="password" id="password" name="password" class="itemValue" placeholder="password" />
      </div>
      <fieldset class="ui-grid-a">
        <div class="ui-block-a"><button type="submit" >Login</button></div>
        <div class="ui-block-b"><a data-role="button" href="<%= url_for :controller => :Settings, :action => :signup %>">Sign Up</a></div>
      </fieldset>
    </form>
  </div>

  <div data-position="fixed" data-role="footer" data-theme='e' >
      <h3>Heart Care</h3>
  </div>

</div>
