<div data-role="page">

  <div data-role="header" data-theme='e' data-position="inline">
    <%= link_to "Back", :action => :show, :id => @session.object %>
    <h1>Edit <%= @session.user_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @session.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @session.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="session[user_id]" value="<%= @session.user_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Token: </td>
              <td class="itemValue"><input type="text" name="session[token]" value="<%= @session.token %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
