<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @connection.id %></h1>
    <a href="<%= url_for :action => :show, :id => @connection.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @connection.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @connection.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="connection[id]" class="fieldLabel">Id</label>
            <input type="text" id="connection[id]" name="connection[id]" value="<%= @connection.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
