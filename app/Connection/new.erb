<div data-role="page">

  <div data-role="header" data-theme='e' data-position="inline">
    <h1>New <%= @connection.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @connection.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="connection[id]" class="fieldLabel">Id</label>
            <input type="text" id="connection[id]" name="connection[id]" <%= placeholder("Id") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
