<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @heartrate.rate %></h1>
    <a href="<%= url_for :action => :show, :id => @heartrate.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @heartrate.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @heartrate.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="heartrate[rate]" class="fieldLabel">Rate</label>
            <input type="text" id="heartrate[rate]" name="heartrate[rate]" value="<%= @heartrate.rate %>" <%= placeholder( "Rate" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
